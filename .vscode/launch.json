{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
    "name": "Next.js: debug server-side",
    "type": "node-terminal",
    "request": "attach",
    "command": "npm run dev",
    "cwd": "${workspaceFolder}/apps/web"
  },
  {
    "name": "Next.js: debug client-side",
    "type": "chrome",
    "request": "attach",
    "url": "http://localhost:3000",
    "cwd": "${workspaceFolder}/apps/web"
  },
  {
    "name": "Next.js: debug full stack",
    "type": "node-terminal",
    "request": "attach",
    "command": "npm run dev",
    "cwd": "${workspaceFolder}/apps/web",
    "serverReadyAction": {
      "pattern": "- Local:.+(https?://.+)",
      "uriFormat": "%s",
      "action": "debugWithChrome"
    }
  }
  ]
}
