{
  "name": "farm-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:inspect": "node --import tsx/esm --inspect src/server.ts",
    "check": "tsc --noEmit",
    "build": "tsup src/server.ts --format esm --external ../../package.json",
    "build_debug": "npm run build --sourcemap",
    "build:check": "npm run check && tsup npm run build",
    "tx": "tsx",
    "start": "node dist/server.js",
    "start_debug": "node --inspect-brk dist/server.js",
    "start:inspect": "node --inspect dist/src/server.js",
    "build:s": "npm run build && npm start",
    "seed": "tsx seed.ts",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js -c ./jest.config.ts --silent",
    "lint": "biome check src/ --apply",
    "ci": "npm run lint && npm run check && npm run test",
    "st": "prisma studio",
    "t": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js -c ./jest.config.ts",
    "t:debug": "NODE_ENV=DEBUG node --inspect --experimental-vm-modules ./node_modules/jest/bin/jest.js -c ./jest.config.ts --detectOpenHandles --testTimeout=600000",
    "generate": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hourboost/tokens": "workspace:*",
    "core": "workspace:*",
    "jest": "^29.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0"
  }
}
