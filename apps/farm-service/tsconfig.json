{
  "extends": "tsconfig/base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "module": "ESNext",
    "types": [
      "jest"
    ],
    "typeRoots": [
      "src/types"
    ],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}